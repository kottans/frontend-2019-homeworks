.top-nav
	width 100%
	height 50px
	margin 15px 0
	display flex
	justify-content flex-end
	align-items: center
	letter-spacing 1em
	& > *
		letter-spacing normal
		margin 0 15px

.nav-link
	color #000
	font-size 14px
	text-decoration none
	&:hover, &:focus
		text-decoration underline

.nav-icon
	display inline-block
	square(20px)
	background-image url(../img/icons.png)
	background-repeat no-repeat
	background-size cover
	cursor pointer

.grid-icon
	position relative
	&:focus,
	.show-popup:focus + &
		default-outline()

.bell-icon
	border-radius 50%
	background-color gray(115)
	background-position 0 -20px
	&:hover
		filter brightness(1.25)

.account-placeholder
	display flex
	justify-content center
	align-items center
	square(40px)
	border-radius 50%
	background rgb(142,0,162)
	color #fff
	font-size 1.5em
	text-decoration none
	text-align center
	&::after
		content: 'A'
